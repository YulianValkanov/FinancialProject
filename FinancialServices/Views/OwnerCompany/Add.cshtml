
@model AddOwnerCompanyViewModel

@{
    ViewBag.Title = "Добави собственик Физическо Лице";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
          
           

            <div class="mb-3">
                <label asp-for="@Model.OwnerEik" class="form-label">ЕИК на собственик</label>
                <input asp-for="@Model.OwnerEik" class="form-control" aria-required="true" />
                <span asp-validation-for="OwnerEik" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.Persent" class="form-label">Процент собственост</label>
                <input asp-for="@Model.Persent" class="form-control" aria-required="true" />
                <span asp-validation-for="Persent" class="text-danger"></span>
            </div>





            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Добави собственик" />
            </div>
        </form>
    </div>
</div>



                </li>

            </ul>
        </div>
    </section>



</div>


<script type="text/javascript">

       
    var elementService1 = document.getElementById("service1");
    var elementService2 = document.getElementById("service2");
    var elementService3 = document.getElementById("service3");
    var elementService4 = document.getElementById("service4");

    elementService1.style.display = "none";
    elementService2.style.display = "none";
    elementService3.style.display = "none";
    elementService4.style.display = "none";


    function hideFunction(event) {

        var currentButton = event.currentTarget;

        var id = currentButton.id;


        if (id == "click1") {
          //  var x = document.getElementById("investContent1");
            if (elementService1.style.display === "none") {
                elementService1.style.display = "block";
            } else {
                elementService1.style.display = "none";
            }
        } else if (id == "click2") {
            if (elementService2.style.display === "none") {
                elementService2.style.display = "block";
            } else {
                elementService2.style.display = "none";
            }

         } else if (id == "click3") {
            if (elementService3.style.display === "none") {
                elementService3.style.display = "block";
            } else {
                elementService3.style.display = "none";
            }

        } else if (id == "click4") {
            if (elementService4.style.display === "none") {
                elementService4.style.display = "block";
            } else {
                elementService4.style.display = "none";
            }

        }

        
    }

</script>
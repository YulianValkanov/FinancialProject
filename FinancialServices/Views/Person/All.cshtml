@model AllQuaryPersonViewModel

@{
    ViewBag.Title = "КЛИЕНТИ ФИЗИЧЕСКИ ЛИЦА";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-3 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="IdEgn"></label>
                <input asp-for="IdEgn" class="form-control" placeholder="...">

            </div>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="...">
        </div>

        <div class="form-group col-md-3">
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="...">
            </div>
        </div>



        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Търси" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>






<div class="row">


    <div class="container">
        <h2>КЛИЕНТИ:</h2>
        <p>Резултат:</p>
        <table class="table table-hover">

            <thead>
                <tr>
                    <th>ЕГН</th>
                    <th>Име</th>
                    <th>Презиме</th>
                    <th>Фамилия</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>

                @foreach (var person in Model.Persons)
                {
                    <tr>
                        <td>@person.IdEgn</td>
                        <td>@person.FirstName</td>
                        <td>@person.SecondName</td>
                        <td>@person.LastName</td>

                        @if (User.IsInRole(AdminRolleName))
                        {
                            <td>
                                <a asp-area="" asp-controller="Person" asp-action="Edit" asp-route-IdEgn="@person.IdEgn"
                           class="btn btn-success">Редакция</a>

                                <a asp-area="" asp-controller="Person" asp-action="Delete" asp-route-IdEgn="@person.IdEgn"
                           class="btn btn-danger">Изтриване</a>

                            </td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
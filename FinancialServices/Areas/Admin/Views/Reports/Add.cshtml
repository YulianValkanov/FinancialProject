@model ImportReportViewModel

@{
    ViewBag.Title = "Импортиране на ОПР";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">



            <div class="mb-3">
                <label asp-for="@Model.IdEik" class="form-label">ЕИК на фирма</label>
                <input asp-for="@Model.IdEik" class="form-control" aria-required="true" />
                <span asp-validation-for="IdEik" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.CompanyName" class="form-label">Име на фирма</label>
                <input asp-for="@Model.CompanyName" class="form-control" aria-required="true" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.YearReport" class="form-label">Годишен на ОПР</label>
                <input asp-for="@Model.YearReport" class="form-control" aria-required="true" />
                <span asp-validation-for="YearReport" class="text-danger"></span>
            </div>





            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Импортирай ОПР" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}